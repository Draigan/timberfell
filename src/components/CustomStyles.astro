---
import '@fontsource-variable/inter';

---

<style is:inline>
  @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@700&family=Overpass:wght@400;600&display=swap');

  :root {
    --aw-font-sans: 'Overpass', 'Inter Variable', sans-serif;
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Montserrat', 'Inter Variable', sans-serif;

    --aw-color-primary: rgb(47 107 58); /* Forest green */
    --aw-color-secondary: rgb(33 82 49); /* Deep spruce */
    --aw-color-accent: rgb(166 111 43); /* Warm cedar */

    --aw-color-text-heading: rgb(34 44 32);
    --aw-color-text-default: rgb(41 56 43);
    --aw-color-text-muted: rgb(41 56 43 / 70%);
    --aw-color-bg-page: rgb(244 245 240);

    --aw-color-bg-page-dark: rgb(17 25 20);

    ::selection {
      background-color: rgba(166, 111, 43, 0.3);
      color: rgb(33 45 35);
    }
  }

  .dark {
    --aw-font-sans: 'Overpass', 'Inter Variable', sans-serif;
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Montserrat', 'Inter Variable', sans-serif;

    --aw-color-primary: rgb(105 164 120);
    --aw-color-secondary: rgb(73 120 88);
    --aw-color-accent: rgb(205 156 95);

    --aw-color-text-heading: rgb(229 235 229);
    --aw-color-text-default: rgb(200 212 201);
    --aw-color-text-muted: rgb(200 212 201 / 65%);
    --aw-color-bg-page: rgb(17 25 20);

    ::selection {
      background-color: rgba(205, 156, 95, 0.35);
      color: rgb(14 20 16);
    }
  }
</style>
